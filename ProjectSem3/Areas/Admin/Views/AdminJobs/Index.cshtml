@model IEnumerable<ProjectSem3.Models.Job>

@{
    ViewData["Title"] = "Manager Jobs ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Manager Jobs </span>
        </nav>
    </div>
</div>
<div class="card">
   <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-15">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminJobs" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Create Job</span></a>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover e-commerce-table">
            <thead>
                <tr>

                    <th>ID</th>
                    <th>Title</th>
                    <th>Wage</th>
                    <th>Vacancy</th>
                    <th>Address</th>
                    <th>DateCreate</th>
                        <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td style="width:180px">
                                <div class="d-flex align-items-center">
                                    <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style=" " alt="">
                                    <h6 class="m-b-0 m-l-10">@item.Title</h6>
                                </div>
                            </td>
                            <td>@item.Wage</td>
                            <td>@item.Vacancy</td>
                            <td>@item.Address</td>
                            <td>@item.DateCreate</td>
                            <td>
                                <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminJobs" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminJobs" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminJobs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                            </td>
                        </tr>
                    }
                }
             </tbody>
        </table>
    </div>
</div>
</div>




