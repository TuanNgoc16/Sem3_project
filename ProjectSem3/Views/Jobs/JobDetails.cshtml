@*model IEnumerable<ProjectSem3.Models.Job>*@
@model ProjectSem3.Models.Job
@{
    ViewData["Title"] = "Details";
}

<div class="page-heading about-heading header-text" style="background-image: url('~/assets/images/anhbiaheadding.jpg'); padding: 80px 0px 0px 0px ">

    <img class="head-img" style="height: 450px; width: 100%"  src="~/assets/images/anhbiaheadding.jpg" />
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                <div class="text-content" style="position:absolute; bottom: 150px;">
                        <h4> Security</h4>

                        <h2>Security Officer - Luxury Retail</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="products">
    <div class="container">
        <div class="row">

            <div class="col-md-9 col-sm-8">
                    <div class="form-group">
                        <h5 style="font-size: 40px">@Html.DisplayFor(model => model.Title)</h5>
                </div>

                <p class="lead">
                    <i class="fa fa-map-marker"></i>@Html.DisplayFor(model => model.Address) &nbsp;&nbsp;
                </p>
                <br />
                <p class="lead">
                    <i class="fa fa-calendar"></i> @Html.DisplayFor(model => model.DateCreate) &nbsp;&nbsp;
                </p>
                <br />
                <p class="lead">
                    <i class="fa-solid fa-sack-dollar"></i>
                    Wage: @Html.DisplayFor(model => model.Wage)$
                </p>
                <br />

            </div>

            <div class="col-md-3 col-sm-4">
                <div class="contact-form">
                    <div class="form-group">

                        <a class="filled-button btn-block" asp-controller="CVWrites" asp-action="Create" style="text-align: center">Submit CV</a>

                    </div>
                </div>


                <br>
            </div>

            <div class="col-md-12 col-sm-12">
                <br>
                
                
                <p>
                    @Html.DisplayFor(model => model.JobDescription) <br />  
                </p>


                <br>
                <br>
                <ul class="social-icons text-center">
                    <li><a href="https://facebook.com"><i class="fa-brands fa-facebook"></i></a></li>
                    <li><a href="mailto:bananagroup@gmail.com"><i class="fa fa-envelope"></i></a></li>
                    <li><a href="https://tiktok.com"><i class="fa-brands fa-tiktok"></i></a></li>
                    <li><a href="https://yourtube.com"><i class="fa-brands fa-youtube"></i></a></li>
                </ul>

            </div>

        </div>
    </div>
</div>



